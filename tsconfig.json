    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "CommonJS", //esnext",
        "target": "es2018",
        "allowJs": true,
        "moduleResolution": "node",
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "baseUrl": "./src",
        "paths": {
            "@": [
                "src"
            ]
        }
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}